@model HOUPE.ViewModels.RegisterViewModel
<environment include="Development">
    <link rel="stylesheet" href="~/css/register.css" />
</environment>
<div class="cont">
    <div class="img"></div>
    <div class="form">
        <h2>Explore</h2>
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div>
                    <label asp-for="Email">
                        Введите Email
                        <input type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </label><br />
                </div>
                <div>
                    <label asp-for="FirstName">
                        Введите FirstName
                        <input type="text" asp-for="FirstName" />
                        <span asp-validation-for="FirstName" />
                    </label><br />
                </div>
                <div>
                    <label asp-for="LastName">
                        Введите LastName
                        <input type="text" asp-for="LastName" />
                        <span asp-validation-for="LastName" />
                    </label><br />
                </div>
                <div>
                    <label asp-for="Password">
                        Введите пароль
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </label><br />
                </div>
                <div>
                    <label asp-for="PasswordConfirm">
                        Повторите пароль
                        <input asp-for="PasswordConfirm" />
                        <span asp-validation-for="PasswordConfirm" />
                    </label><br />
                </div>
                <div>
                    <button type="submit" class="submit">Sign Up</button>
                </div>
            </div>
        </form>
    </div>
</div>